{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/**/*.d.ts",
        "./test/**/*.ts",
        "!./test/**/*.d.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "files": [
        "./src/jax.ts",
        "./src/monads/either.ts",
        "./src/monads/future.ts",
        "./src/monads/option.ts",
        "./src/monads/try.ts",
        "./src/util/timespan.ts",
        "./src/utils/callback.ts",
        "./src/utils/datetime.ts",
        "./src/utils/type.ts",
        "./src/utils/url.ts",
        "./test/monads/either.ts",
        "./test/monads/future.ts",
        "./test/monads/option.ts",
        "./test/utils/datetime.ts",
        "./test/utils/type.ts",
        "./test/utils/url.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
