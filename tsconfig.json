{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/**/*.d.ts",
        "./test/**/*.ts",
        "!./test/**/*.d.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "files": [
        "./src/jax.ts",
        "./src/monad/future.ts",
        "./src/monad/option.ts",
        "./src/monad/try.ts",
        "./src/util/callback.ts",
        "./src/util/date.ts",
        "./src/util/url.ts",
        "./test/test.ts",
        "./test/type.ts",
        "./test/util/date.ts",
        "./test/util/url.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
